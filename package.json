    "semi": false,
    "singleQuote": true
  },
  "name": "ipc-3d",
  "author": "Philip Taylor",
  "module": "dist/ipc-3d.esm.js",
  "devDependencies": {
    "@web/dev-server": "^0.1.29",
    "cypress": "^9.5.3",
    "husky": "^7.0.4",
    "jest": "^28.0.0",
    "jest-canvas-mock": "^2.3.1",
    "npm-run-all": "^4.1.5",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
